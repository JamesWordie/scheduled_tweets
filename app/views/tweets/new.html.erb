<div class="container">
  <h1 class="text-center my-5">Schedule A Tweet</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @tweet do |form| %>
        <%= render 'shared/form_errors', form: form %>

        <div class="mb-3">
          <%= form.label :twitter_account_id %>
          <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, { class: "form-control" } %>
          <%= link_to 'Connect Twitter', '/auth/twitter', method: :post, class:"btn btn-outline-primary mt-3" %>
        </div>
        <div class="mb-3">
          <%= form.label :body %>
          <%= form.text_area :body, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :publish_at %>
          <div class="form-control">
            <%= form.datetime_select :publish_at %>
          </div>
        </div>
        <div class="mb-3">
          <%= form.button "Schedule", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
