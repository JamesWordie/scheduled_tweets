<div class="container">
  <h1 class="text-center mt-5">Forgot Your Password?</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: password_reset_path do |form| %>
        <div class="mb-3">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", placeholder: "steve@jobs.com" %>
        </div>
        <div class="mb-3">
          <%= form.submit "Reset Password", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
