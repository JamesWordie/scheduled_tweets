<div class="container">
  <h1 class="text-center mt-5">Log In</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: sign_in_path do |form| %>
        <div class="mb-3">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", placeholder: "steve@jobs.com" %>
        </div>
        <div class="mb-3">
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control", placeholder: "password" %>
        </div>
        <div class="mb-3">
          <%= form.submit "Sign Up", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
