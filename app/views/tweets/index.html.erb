<div class="container">
  <div class="d-flex flex-column justify-content-center align-items-center my-5">
    <h1 class="mb-4">Tweets</h1>

    <% if Current.user.twitter_accounts.any? %>
      <%= link_to "Schedule A Tweet", new_tweet_path, class: "btn btn-outline-primary" %>
    <% end %>

    <% if Current.user.twitter_accounts.none? %>
      <%= button_to 'Connect Twitter', '/auth/twitter', method: :post, class:"btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
